    <script>
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const uploadBtn = document.getElementById('uploadBtn');
        const clearBtn = document.getElementById('clearBtn');
        const downloadAllBtn = document.getElementById('downloadAllBtn');
        const loading = document.getElementById('loading');
        const stats = document.getElementById('stats');
        const results = document.getElementById('results');
        const previewArea = document.getElementById('previewArea');

        let selectedFiles = [];

        // ç‚¹å‡»ä¸Šä¼ åŒºåŸŸ
        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        // æ–‡ä»¶é€‰æ‹©
        fileInput.addEventListener('change', (e) => {
            handleFiles(e.target.files);
        });

        // æ‹–æ‹½ä¸Šä¼ 
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragging');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragging');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragging');
            handleFiles(e.dataTransfer.files);
        });

        function handleFiles(files) {
            selectedFiles = Array.from(files);

            // æ˜¾ç¤ºé¢„è§ˆ
            previewArea.innerHTML = '';
            selectedFiles.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const div = document.createElement('div');
                    div.className = 'preview-item';
                    div.innerHTML = `<img src="${e.target.result}" alt="${file.name}">`;
                    previewArea.appendChild(div);
                };
                reader.readAsDataURL(file);
            });

            uploadBtn.style.display = 'inline-block';
            clearBtn.style.display = 'inline-block';
        }

        // å¼€å§‹å¤„ç†
        uploadBtn.addEventListener('click', async () => {
            if (selectedFiles.length === 0) {
                alert('è¯·å…ˆé€‰æ‹©å›¾ç‰‡');
                return;
            }

            const formData = new FormData();
            selectedFiles.forEach(file => {
                formData.append('files[]', file);
            });

            // æ·»åŠ é€‰æ‹©çš„æ¨¡å‹å‚æ•°
            const selectedModel = document.getElementById('modelSelect').value;
            formData.append('model', selectedModel);

            loading.style.display = 'block';
            uploadBtn.disabled = true;

            try {
                const response = await fetch('/upload', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                loading.style.display = 'none';
                uploadBtn.disabled = false;

                if (data.success) {
                    displayResults(data);
                } else {
                    alert('å¤„ç†å¤±è´¥ï¼š' + (data.error || 'æœªçŸ¥é”™è¯¯'));
                }
            } catch (error) {
                loading.style.display = 'none';
                uploadBtn.disabled = false;
                alert('å¤„ç†å¤±è´¥ï¼š' + error.message);
            }
        });

        function displayResults(data) {
            stats.style.display = 'block';
            document.getElementById('totalCount').textContent = data.processed + data.failed;
            document.getElementById('successCount').textContent = data.processed;
            document.getElementById('failedCount').textContent = data.failed;

            results.innerHTML = '';
            data.files.forEach(file => {
                const div = document.createElement('div');
                div.className = 'result-item';
                div.innerHTML = `
                    <div class="result-name">âœ… ${file.original} â†’ ${file.processed}</div>
                    <div class="result-actions">
                        <button class="btn-download" onclick="downloadFile('${file.download_url}')">ä¸‹è½½</button>
                    </div>
                `;
                results.appendChild(div);
            });

            if (data.processed > 0) {
                downloadAllBtn.style.display = 'inline-block';
            }
        }

        function downloadFile(url) {
            window.location.href = url;
        }

        // æ‰“åŒ…ä¸‹è½½å…¨éƒ¨
        downloadAllBtn.addEventListener('click', () => {
            window.location.href = '/download_all';
        });

        // æ¸…ç©º
        clearBtn.addEventListener('click', () => {
            selectedFiles = [];
            fileInput.value = '';
            previewArea.innerHTML = '';
            results.innerHTML = '';
            stats.style.display = 'none';
            uploadBtn.style.display = 'none';
            clearBtn.style.display = 'none';
            downloadAllBtn.style.display = 'none';

            fetch('/clear');
        });
    </script>
